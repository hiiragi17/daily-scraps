---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import PostCalendarReact from '../../components/PostCalendarReact.jsx';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';

// ブログ投稿を取得
const posts = await getCollection('blog');

// Reactコンポーネントに渡すためのデータを整形
const formattedPosts = posts.map((post: { id: any; data: { title: any; description: any; pubDate: any; customSlug?: string; }; }) => ({
  id: post.id,
  data: {
    title: post.data.title,
    description: post.data.description || '',
    pubDate: post.data.pubDate,
    customSlug: post.data.customSlug,
  }
}));
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <BaseHead title="Calendar" description="投稿カレンダー" />
  </head>
  <body>
    <Header />
    <main>
      <!-- React Calendarコンポーネント -->
      <PostCalendarReact client:load posts={formattedPosts} />
    </main>
    <Footer />
  </body>
</html>

<style>
  main {
    min-height: calc(100vh - 10rem);
    background: linear-gradient(135deg, #f5f7fa 0%, #e9ecef 100%);
    padding: 0;
  }
  
  /* グローバルなbodyスタイルをリセット */
  body {
    margin: 0;
    padding: 0;
  }
</style>