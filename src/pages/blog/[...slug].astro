---
import { getCollection } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';
import { marked } from 'marked';

export async function getStaticPaths() {
  const posts = await getCollection('blog');

  return posts.map((post: { id: string; body: any; data: any; }) => {
    // customSlugフィールドがあればそれを使用、なければファイルパスから生成
    const slug = post.data.customSlug || post.id.replace(/\.(md|mdx)$/, '');

    // Markdownを手動でHTMLに変換
    const htmlContent = marked.parse(post.body || '');

    return {
      params: { slug: slug },
      props: {
        postData: post.data,
        htmlContent: htmlContent
      }
    };
  });
}

const { postData, htmlContent } = Astro.props;
---

<BlogPost {...(postData ?? {})}>
  <div class="prose" set:html={htmlContent} />
</BlogPost>

<style is:global>
  .prose h2 {
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-size: 1.8rem;
    font-weight: bold;
    border-bottom: 2px solid #e5e5e5;
    padding-bottom: 0.5rem;
  }
  
  .prose h3 {
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    font-size: 1.4rem;
    font-weight: 600;
  }
  
  .prose p {
    margin: 1rem 0;
    line-height: 1.7;
  }
  
  .prose ul, .prose ol {
    margin: 1rem 0;
    padding-left: 2rem;
  }
  
  .prose li {
    margin: 0.5rem 0;
    line-height: 1.6;
  }
  
  .prose pre {
    background: #1e1e1e;
    color: #d4d4d4;
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }
  
  .prose code {
    background: #f4f4f4;
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-family: 'Courier New', monospace;
    font-size: 0.9em;
  }
  
  .prose pre code {
    background: none;
    padding: 0;
    color: #d4d4d4;
  }
  
  .prose blockquote {
    border-left: 4px solid #e5e5e5;
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: #666;
  }

  .prose img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1rem 0;
  }

  .prose table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
  }

  .prose th,
  .prose td {
    border: 1px solid #e5e5e5;
    padding: 0.75rem;
    text-align: left;
  }

  .prose th {
    background: #f9f9f9;
    font-weight: 600;
  }

  /* レスポンシブ対応 - タブレット */
  @media (max-width: 768px) {
    .prose h2 {
      font-size: 1.5rem;
      margin-top: 1.5rem;
      margin-bottom: 0.75rem;
    }

    .prose h3 {
      font-size: 1.2rem;
      margin-top: 1.25rem;
      margin-bottom: 0.5rem;
    }

    .prose p {
      margin: 0.875rem 0;
      line-height: 1.75;
    }

    .prose ul, .prose ol {
      padding-left: 1.5rem;
      margin: 0.875rem 0;
    }

    .prose li {
      margin: 0.375rem 0;
    }

    .prose pre {
      padding: 0.875rem;
      margin: 1.25rem 0;
      font-size: 0.875rem;
      border-radius: 6px;
    }

    .prose code {
      font-size: 0.85em;
      padding: 0.15rem 0.3rem;
    }

    .prose blockquote {
      padding-left: 0.875rem;
      margin: 1.25rem 0;
      font-size: 0.95rem;
    }

    .prose table {
      font-size: 0.9rem;
    }

    .prose th,
    .prose td {
      padding: 0.5rem;
    }
  }

  /* レスポンシブ対応 - モバイル */
  @media (max-width: 480px) {
    .prose h2 {
      font-size: 1.25rem;
      margin-top: 1.25rem;
      margin-bottom: 0.5rem;
      padding-bottom: 0.375rem;
      border-bottom-width: 1px;
    }

    .prose h3 {
      font-size: 1.1rem;
      margin-top: 1rem;
      margin-bottom: 0.375rem;
    }

    .prose p {
      margin: 0.75rem 0;
      line-height: 1.7;
      font-size: 0.9rem;
    }

    .prose ul, .prose ol {
      padding-left: 1.25rem;
      margin: 0.75rem 0;
    }

    .prose li {
      margin: 0.25rem 0;
      font-size: 0.9rem;
      line-height: 1.6;
    }

    .prose pre {
      padding: 0.75rem;
      margin: 1rem 0;
      font-size: 0.8rem;
      border-radius: 4px;
      -webkit-overflow-scrolling: touch;
    }

    .prose code {
      font-size: 0.8em;
      padding: 0.1rem 0.25rem;
    }

    .prose blockquote {
      padding-left: 0.75rem;
      margin: 1rem 0;
      font-size: 0.9rem;
      border-left-width: 3px;
    }

    .prose img {
      border-radius: 6px;
      margin: 0.75rem 0;
    }

    .prose table {
      font-size: 0.8rem;
      margin: 1rem 0;
      display: block;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }

    .prose th,
    .prose td {
      padding: 0.375rem 0.5rem;
      white-space: nowrap;
    }
  }
</style>