---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const tags = [...new Set(posts.flatMap((post: { data: { tags: any; }; }) => post.data.tags || []))];
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <BaseHead title="Tags" description="All tags" />
  </head>
  <body>
    <Header />
    <main>
      <h1>タグ一覧</h1>
      {tags.length === 0 ? (
        <p>タグがまだありません。記事にタグを追加してください。</p>
      ) : (
        <div class="tag-list">
          {tags.map(tag => (
            <a href={`/daily-scraps/tags/${tag}/`} class="tag">
              #{tag}
            </a>
          ))}
        </div>
      )}
      <div class="back-link">
        <a href="/daily-scraps/">← トップに戻る</a>
      </div>
    </main>
    <Footer />
  </body>
</html>

<style>
  main {
    padding: 2rem;
    max-width: 60ch;
    margin: 0 auto;
  }

  h1 {
    margin-bottom: 2rem;
  }

  .tag-list {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin: 2rem 0;
  }

  .tag {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: #f0f0f0;
    border-radius: 2rem;
    text-decoration: none;
    color: #333;
    transition: all 0.2s;
  }

  .tag:hover {
    background: var(--accent);
    color: white;
  }

  .back-link {
    margin-top: 3rem;
  }

  .back-link a {
    color: var(--accent);
    text-decoration: none;
  }

  .back-link a:hover {
    text-decoration: underline;
  }

  /* レスポンシブ対応 */
  @media (max-width: 768px) {
    main {
      padding: 1rem;
    }

    h1 {
      font-size: 1.8rem;
      margin-bottom: 1.5rem;
    }

    .tag-list {
      gap: 0.75rem;
      margin: 1.5rem 0;
    }

    .back-link {
      margin-top: 2rem;
    }
  }

  @media (max-width: 480px) {
    main {
      padding: 0.75rem;
    }

    h1 {
      font-size: 1.5rem;
      margin-bottom: 1rem;
    }

    .tag-list {
      gap: 0.5rem;
      margin: 1rem 0;
    }

    .tag {
      padding: 0.375rem 0.75rem;
      font-size: 0.9rem;
    }

    .back-link {
      margin-top: 1.5rem;
    }

    .back-link a {
      font-size: 0.9rem;
    }
  }
</style>