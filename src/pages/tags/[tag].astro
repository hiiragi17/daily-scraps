  }

  .post-item {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #e0e0e0;
  }

  .post-item:last-child {
    border-bottom: none;
  }

  .post-item h2 {
    margin-bottom: 0.5rem;
  }

